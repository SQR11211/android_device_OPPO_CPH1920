# Android fstab file.
# Modified for Image Flashing support (flashimg=1)

# --- System (Split into File System & Raw Image) ---
/system         ext4     /dev/block/platform/bootdevice/by-name/system     flags=display="System"
/system_image   emmc     /dev/block/platform/bootdevice/by-name/system     flags=display="System Image";backup=1;flashimg=1

# --- Vendor (Split into File System & Raw Image) ---
/vendor         ext4     /dev/block/platform/bootdevice/by-name/vendor     flags=display="Vendor"

# --- Data (Encryption Fixed) ---
/data           ext4     /dev/block/platform/bootdevice/by-name/userdata   flags=display=data

# --- Standard Partitions ---
/odm                  ext4     /dev/block/platform/bootdevice/by-name/odm              flags=display=odm
/cache                ext4     /dev/block/platform/bootdevice/by-name/cache            flags=display=cache

# --- External Storage ---
/external_sd          auto     /dev/block/mmcblk1p1  /dev/block/mmcblk1                flags=display="Micro SD";storage;wipeingui;removable
/usb_otg              auto     /dev/block/sda1       /dev/block/sda                    flags=display="USB OTG";storage;wipeingui;removable

# --- Boot & Recovery (Added flashimg support) ---
/boot                 emmc     /dev/block/platform/bootdevice/by-name/boot             flags=display="Boot";backup=1;flashimg=1
/recovery             emmc     /dev/block/platform/bootdevice/by-name/recovery         flags=display="Recovery";backup=1;flashimg=1

# --- Other Partitions ---
/vendor/protect_f     ext4     /dev/block/platform/bootdevice/by-name/protect1         flags=display=protect_f
/vendor/protect_s     ext4     /dev/block/platform/bootdevice/by-name/protect2         flags=display=protect_s
/vendor/nvdata        ext4     /dev/block/platform/bootdevice/by-name/nvdata           flags=display=nvdata
/vendor/nvcfg         ext4     /dev/block/platform/bootdevice/by-name/nvcfg            flags=display=nvcfg
/vendor/persist       ext4     /dev/block/platform/bootdevice/by-name/persist          flags=display=persist
/opporeserve          ext4     /dev/block/platform/bootdevice/by-name/opporeserve2     flags=display=opporeserve
/persistent           emmc     /dev/block/platform/bootdevice/by-name/frp              flags=display=persistent
/nvram                emmc     /dev/block/platform/bootdevice/by-name/nvram            flags=display=nvram
/proinfo              emmc     /dev/block/platform/bootdevice/by-name/proinfo          flags=display=proinfo
/bootloader           emmc     /dev/block/platform/bootdevice/by-name/lk               flags=display=bootloader
/bootloader2          emmc     /dev/block/platform/bootdevice/by-name/lk2              flags=display=bootloader2
/misc                 emmc     /dev/block/platform/bootdevice/by-name/para             flags=display=misc
/logo                 emmc     /dev/block/platform/bootdevice/by-name/logo             flags=display=logo
/expdb                emmc     /dev/block/platform/bootdevice/by-name/expdb            flags=display=expdb
/seccfg               emmc     /dev/block/platform/bootdevice/by-name/seccfg           flags=display=seccfg
/tee1                 emmc     /dev/block/platform/bootdevice/by-name/tee1             flags=display=tee1
